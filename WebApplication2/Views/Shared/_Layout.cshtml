<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/Jquery/jquery.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.js"></script>
</head>
<body>
    <div class="container">
        <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
            <a class="navbar-brand" asp-controller="home" asp-action="index">
                <img src="#" height="30" width="30" alt="头像" />
            </a>
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#collapseNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div id="collapseNavbar" class="collapse navbar-collapse">
                <ul class="navbar-nav">
                    <li class="nav-item m-1">
                        <a asp-controller="home" asp-action="index">学生列表</a>
                    </li>
                    <li class="nav-item m-1">
                        <a asp-controller="home" asp-action="add">创建学生</a>
                    </li>
                </ul>
            </div>


        </nav>
        <div>
            @RenderBody()
        </div>
    </div>

    @*js节点的使用*@
    @RenderSection("JavaScript", required:false)
</body>
</html>
